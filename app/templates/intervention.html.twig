{% extends "base_auth.html.twig" %}

{% block body %}
    {% include "navbar.html.twig" %}
    <div class="container mt-5">
        <div class="row justify-content-md-center">
            <div class="col-12 col-md-11 col-lg-8 col-xl-7 col-xxl-6">
                <div class="card">
                    <div class="card-body">
                        <div class="text-center mb-5">
                            <a href="#!">
                                <img src="./img/images.png" alt="Logo" width="175" height="100">
                            </a>
                        </div>
                        <h1 class="text-center">Formulaire d'Intervention</h1>
                        {% if msg %}
                            <div class="alert alert-success" role="alert">
                                {{ msg }}
                            </div>
                        {% endif %}
                        <form action="" method="post">
                            
                            <div class="row gy-3 gy-md-4">
                                
                                <div class="col-12">
                                    <label for="id_intervenant" class="form-label">ID intervenant <span class="text-danger">*</span></label>
                                    <input type="text" class="form-control" name="id_intervenant" id="id_intervenant" placeholder="Entrez l'ID de l'intervenant" required>
                                </div>

                                <div class="col-12">
                                    <label for="id_intervenant" class="form-label">titre <span class="text-danger">*</span></label>
                                    <input type="text" class="form-control" name="titre" id="titre" placeholder="Entrez le titre de l'intervention" required>
                                </div>
                                <div class="col-12">
                                    <label for="statusId" class="form-label">Statut <span class="text-danger">*</span></label>
                                    <select class="form-select" name="statusId" id="statusId" required>
                                        <option value="2">Urgent</option>
                                        <option value="1">Modéré</option>
                                        <option value="3">Très urgent</option>
                                    </select>
                                </div>
                                <div class="col-12">
                                    <label for="suiviId" class="form-label">Suivi <span class="text-danger">*</span></label>
                                    <select class="form-select" name="suiviId" id="suiviId" required>
                                        <option value="1">En Attente</option>
                                        <option value="2">En cours</option>
                                        <option value="3">Validé</option>
                                        <option value="4">Annulé</option>
                                        <option value="5">Rejeté</option>
                                    </select>
                                </div>
                                <div class="col-12">
                                    <label for="dateInput" class="form-label">Sélectionnez une date : <span class="text-danger">*</span></label>
                                    <input type="date" id="dateInput" name="dateInput" class="form-control" required>
                                </div>
                                <div class="col-12">
                                    <label for="timeInput" class="form-label">Sélectionnez une heure :</label>
                                    <input type="time" id="timeInput" name="timeInput" class="form-control">
                                </div>
                                <div class="col-12">
                                    <label for="commentaire" class="form-label">Commentaire <span class="text-danger">*</span></label>
                                    <textarea class="form-control" name="commentaire" id="commentaire" placeholder="Entrez votre commentaire" required></textarea>
                                </div>
                                <div class="col-12">
                                    <div class="d-grid">
                                        <button class="btn btn-primary btn-lg" type="submit" name="send" value="submit">Soumettre</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% include "footer.html.twig" %}
    <script>
        // Ajoutez ici des fonctionnalités JavaScript si nécessaire
    </script>
{% endblock %}
