{% extends "base_auth.html.twig" %}

{% block body %} 
    {% include "navbar.html.twig" %}
    <div class="bg-light py-3 py-md-5">
        <div class="container">
            <div class="row justify-content-md-center">
                <div class="col-12 col-md-11 col-lg-8 col-xl-7 col-xxl-6">
                    <div class="bg-white p-4 p-md-5 rounded shadow-sm">
                        <div class="row">
                            <div class="col-12">
                                <div class="text-center mb-5">
                                    <a href="#!">
                                        <img src="./img/images.png" alt="Logo" width="175" height="100">
                                    </a>
                                </div>
                            </div>
                        </div>
                        <h1 class="text-center">Détails de l'Intervention</h1>
                        
                        {# Formulaire pour spécifier l'ID de l'intervention #}
                        <form action="get_int.php" method="get">
                            <div class="row gy-3 gy-md-4 overflow-hidden">
                                <div class="col-12">
                                    <label for="idIntervention" class="form-label">ID de l'Intervention</label>
                                    <input type="text" class="form-control" name="id_intervention" id="id_intervention" placeholder="Entrez l'ID de l'intervention" required>
                                </div>
                            </div>
                            <div class="row gy-3 gy-md-4 overflow-hidden">
                                <div class="col-12">
                                    <div class="d-grid">
                                        <button class="btn btn-primary btn-lg" type="submit">Afficher les détails</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                        
                        {% if intervention %}
                            <div class="row gy-3 gy-md-4 overflow-hidden">
                                <div class="col-12">
                                    <label for="idClient" class="form-label">ID Client</label>
                                    <input type="text" class="form-control" value="{{ intervention.id_client }}" readonly>
                                </div>
                                <!-- Ajoute d'autres champs pour afficher les détails de l'intervention -->
                            </div>
                        {% else %}
                            <p>Aucune intervention trouvée.</p>
                        {% endif %}
                        
                        <div class="row">
                            <!-- Ajoute d'autres éléments si nécessaire -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% include "footer.html.twig" %}
{% endblock %}
