{% extends "base_auth.html.twig" %}

{% block body %}
    {% include "navbar.html.twig" %}
    <div class="container-fluid mt-5" style="overflow-x: hidden;"> {# Ajout de la classe pour masquer la barre de défilement horizontale #}
        <div class="row justify-content-center">
            <div class="col-md-12"> {# Modification de la taille de la colonne #}
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h3 class="card-title">Suivi d'Intervention</h3>
                    </div>
                    <div class="card-body">
                        {% if msg %}
                            <div class="alert alert-success" role="alert">
                                {{ msg }}
                            </div>
                        {% endif %}

                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>ID Intervention</th>
                                        <th>Statut</th>
                                        <th>Suivi</th>
                                        <th>Intervenant</th>
                                        <th>Commentaire Client</th>
                                        <th>Commentaire Standardiste</th>
                                        <th>Commentaire Intervenant</th>
                                        <th>Client ID</th>
                                        <th>Nom du Client</th>
                                        <th>Date</th>
                                        <th>Heure</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for intervention in interventions %}
                                        <tr>
                                            <td>{{ intervention.Id }}</td>
                                            <td>{{ intervention.Label }}</td>
                                            <td>{{ intervention.Labele }}</td>
                                            <td>{{ intervention.Id_intervenant }}</td>
                                            <td>{{ intervention.commentaire_client }}</td>
                                            <td>{{ intervention.Commentaire }}</td>
                                            <td>{{ intervention.commentaire_intervenant }}</td>
                                            <td>{{ intervention.Id_client }}</td>
                                            <td>{{ intervention.Nom }}</td>
                                            <td>{{ intervention.date }}</td>
                                            <td>{{ intervention.heure }}</td>
                                            <td>
                                                <div class="btn-group" role="group" aria-label="Actions">
                                                    <a href="/create_commentaire.php?intervention_id={{ intervention.Id }}" class="btn btn-sm btn-primary">ajouter un commentaire</a>
                                                  
                                                </div>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                        <div class="d-flex justify-content-end mb-3">
                            <div class="btn-group" role="group">
                                <a href="?sort=asc" class="btn btn-secondary">Nom A-Z</a>
                                <a href="?sort=desc" class="btn btn-secondary">Nom Z-A</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% include "footer.html.twig" %}
