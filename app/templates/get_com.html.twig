            if (confirm("Êtes-vous sûr de vouloir supprimer cette intervention ?")) {
                // Mettre en œuvre la logique de suppression ici
                console.log("Suppression de l'intervention avec l'ID:", id);
            }
        }
    </script>
{% endblock %}
