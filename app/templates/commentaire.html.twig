{% extends "base_auth.html.twig" %}

{% block body %} 
    {% include "navbar.html.twig" %}
    <div class="bg-light py-3 py-md-5">
        <div class="container">
            <div class="row justify-content-md-center">
                <div class="col-12 col-md-11 col-lg-8 col-xl-7 col-xxl-6">
                    <div class="bg-white p-4 p-md-5 rounded shadow-sm">
                        <div class="row">
                            <div class="col-12">
                                <div class="text-center mb-5">
                                    <a href="#!">
                                        <img src="./img/images.png" alt="Logo" width="175" height="100">
                                    </a>
                                </div>
                            </div>
                        </div>
                        <h1 class="text-center">Page de Commentaires</h1>
                        {% if msg %}
                            <div>{{ msg }}</div>
                        {% endif %}
                        <form action="create_commentaire.php" method="post">
                            <div class="row gy-3 gy-md-4 overflow-hidden">
                               
                                <div class="col-12">
                                    <label for="commentaire" class="form-label">Commentaire <span class="text-danger">*</span></label>
                                     <input type="text" class="form-control" name="id_intervention" id="id_intervention" placeholder="Entrez l'ID de l'Intervention" required>
                                    <textarea class="form-control" name="commentaire" id="commentaire" placeholder="Entrez votre commentaire" required></textarea>
                                </div>
                                <div class="col-12">
                                    <div class="d-grid">
                                        <button class="btn btn-primary btn-lg" type="submit" name="send" value="submit">Soumettre</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                        <div class="row">
                            <!-- Ajoute d'autres éléments si nécessaire -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% include "footer.html.twig" %}
{% endblock %}
